# Model endpoints
OSS_MODEL_ENDPOINT=https://models.example.com/v1
OSS_MODEL_API_KEY=replace-with-oss-key
OSS_MODEL_ID=chatgpt-20b
CODEX_API_KEY=replace-with-codex-key
CODEX_ENDPOINT=https://api.openai.com/v1
CODEX_MODEL_ID=codex-5.1

# Agent framework features
AGENT_FRAMEWORK_DEVUI_ENABLED=true
AGENT_FRAMEWORK_AGUI_ENABLED=true

# Terraform configuration
TF_CLI_PATH=terraform
TF_BACKEND_RG=rg-terraform-state
TF_BACKEND_ACCOUNT=storageaccount
TF_BACKEND_CONTAINER=tfstate

# Git settings
GIT_PROVIDER=github
GIT_USERNAME=infra-bot
GIT_TOKEN=replace-with-token
GITOPS_REPO_PATH=/workspace/homelab

# Database
DATABASE_URL=sqlite+aiosqlite:///./agent.db
ENVIRONMENT=dev

# MCP servers (defaults already provided; override if needed)
TERRAFORM_MCP_COMMAND=npx
TERRAFORM_MCP_ARGS=-y terraform-mcp-server
MSLEARN_MCP_URL=https://learn.microsoft.com/api/agentframework/mslearn-mcp
MSLEARN_MCP_KEY=

# Tool binaries (if using shared cache)
TOOLS_INSTALL_DIR=.tools/bin
TOOLS_AUTO_INSTALL=true
# Optional overrides for tool downloads
TERRAFORM_VERSION=1.9.5
TERRAFORM_DOWNLOAD_URL=https://releases.hashicorp.com/terraform/1.9.5/terraform_1.9.5_linux_amd64.zip
CHECKOV_VERSION=3.2.332
CHECKOV_DOWNLOAD_URL=https://github.com/bridgecrewio/checkov/releases/download/v3.2.332/checkov_3.2.332_linux_amd64
TFSEC_VERSION=1.28.3
TFSEC_DOWNLOAD_URL=https://github.com/aquasecurity/tfsec/releases/download/v1.28.3/tfsec-linux-amd64
INFRACOST_VERSION=0.10.42
INFRACOST_DOWNLOAD_URL=https://github.com/infracost/infracost/releases/download/v0.10.42/infracost-linux-amd64.tar.gz
TFSEC_PATH=/usr/local/bin/tfsec
CHECKOV_PATH=/usr/local/bin/checkov
INFRACOST_PATH=/usr/local/bin/infracost
